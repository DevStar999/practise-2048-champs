<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="Theme.Practise2048Champs" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/game_text_color</item>
        <item name="colorPrimaryVariant">@color/game_text_color</item>
        <item name="colorOnPrimary">@color/game_primary_background_color</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Customize your theme here. -->
        <item name="colorBackgroundFloating">@color/white_dialog_background_translucent</item>
        <item name="android:statusBarColor">@color/game_primary_background_color</item>
        <item name="android:navigationBarColor">@color/game_primary_background_color</item>
        <item name="android:windowBackground">@color/game_primary_background_color</item>
    </style>

    <style name="SplashTheme" parent="Theme.Practise2048Champs">
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:navigationBarColor">@color/black</item>
        <item name="android:windowBackground">@color/black</item>
    </style>

    <style name="CustomDialogTheme" parent="@android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@color/white_dialog_background_translucent</item>
        <item name="android:windowAnimationStyle">@style/CustomDialogAnimation</item>
    </style>

    <style name="CustomDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/open_dialog</item>
        <item name="android:windowExitAnimation">@anim/close_dialog</item>
    </style>

    <style name="RoundedCornerTiltedRibbon">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">8dp</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

    <style name="CustomCheckBox">
        <item name="colorControlActivated">@color/game_text_color</item>
        <item name="colorControlHighlight">@color/game_primary_background_color</item>
    </style>
</resources>