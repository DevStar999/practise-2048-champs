<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.LogoLottieFragment">

    <FrameLayout
        android:id="@+id/logo_lottie_frame_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="4dp"
        app:layout_constraintDimensionRatio="1:1.1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Lottie Animation Link = https://lottiefiles.com/42266-roatating-light -->
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/game_preview_spotlight_logo_lottie_fragment_lottie"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleX="1.15"
            android:scaleY="1.15"
            android:visibility="visible"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/rotating_light"
            app:lottie_speed="0.25" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/game_preview_background_logo_lottie_fragment_image_view"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_gravity="center"
            android:background="@drawable/circular_background"
            android:visibility="visible"
            app:srcCompat="@drawable/circular_background" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/game_preview_logo_lottie_fragment_image_view"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginBottom="4dp"
            android:layout_gravity="center"
            android:scaleX="0.85"
            android:scaleY="0.85"
            android:visibility="visible"
            app:srcCompat="@drawable/app_logo_drawable" />

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>